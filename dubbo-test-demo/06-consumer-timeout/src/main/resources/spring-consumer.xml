<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://dubbo.apache.org/schema/dubbo http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

    <!--指定当前工程在管控平台中的名称-->
    <dubbo:application name="06-consumer-timeout"/>

    <dubbo:registry protocol="zookeeper" address="zkOS1:2181,zkOS2:2182,zkOS3:2183"/>

    <!--连接提供者-->
    <!-- check="false" 不检测服务提供者是否启动成功，默认为true -->
    <dubbo:reference id="someService" check="false" timeout="3000" interface="com.wyx.service.SomeService"/>
</beans>